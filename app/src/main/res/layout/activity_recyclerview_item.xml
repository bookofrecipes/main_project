<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_x_small"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="@dimen/margin_medium"
    app:cardElevation="@dimen/margin_small"
    android:transitionName="@string/recipe_card_transition_name"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_dish"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_small">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxxx_small"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/favorites_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_favorite_24"
                android:layout_marginStart="@dimen/margin_xxx_large"
                android:layout_marginEnd="@dimen/margin_x_small"
                app:iconSize="@dimen/margin_large" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:layout_marginStart="@dimen/margin_xx_small"
                app:icon="@drawable/ic_baseline_zoom_in_24"
                app:iconSize="@dimen/margin_large" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

